{
  "manifest_version": 3,
  "name": "Job Tracker",
  "version": "1.0",
  "description": "Save and manage job listings from various job portals",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.naukri.com/*",
    "https://indeed.com/*",
    "https://*.indeed.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.naukri.com/job-listings/*",
        "https://www.naukri.com/jobs-in-*",
        "https://indeed.com/jobs*",
        "https://*.indeed.com/jobs*"
      ],
      "js": ["content-script.js"],
      "css": ["content-script.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Tracker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}